<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/gameplayCategoryTitle">
        <SwitchPreferenceCompat
            android:defaultValue="@string/autoPlayDefault"
            android:key="@string/autoPlay"
            android:summary="@string/autoPlayDesc"
            android:title="@string/autoPlayTitle" />
        <SwitchPreferenceCompat
            android:defaultValue="@string/darkDefault"
            android:key="@string/dark"
            android:summary="@string/darkDesc"
            android:title="@string/darkTitle" />
        <ListPreference
            android:defaultValue="@string/noteAppearanceDefault"
            android:entries="@array/noteAppearance"
            android:entryValues="@array/noteAppearanceValues"
            android:key="@string/noteAppearance"
            android:summary="@string/noteAppearanceDesc"
            android:title="@string/noteAppearanceTitle" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/notesCategoryTitle">
        <SwitchPreferenceCompat
            android:defaultValue="@string/holdsDefault"
            android:key="@string/holds"
            android:summary="@string/holdsDesc"
            android:title="@string/holdsTitle" />
        <SwitchPreferenceCompat
            android:defaultValue="@string/jumpsDefault"
            android:key="@string/jumps"
            android:summary="@string/jumpsDesc"
            android:title="@string/jumpsTitle" />
        <ListPreference
            android:defaultValue="@string/randomizeDefault"
            android:entries="@array/randomize"
            android:entryValues="@array/randomizeValues"
            android:key="@string/randomize"
            android:summary="@string/randomizeDesc"
            android:title="@string/randomizeTitle" />
    </PreferenceCategory>
</PreferenceScreen>